<tool id="CountFastaSequences" name="Count number of sequences">
  <description></description>
  <command interpreter="perl">CountSequences.pl $input </command>
  <inputs>
    <param format="fasta" name="input" type="data" label="Source file"/>
  </inputs>
  <outputs>
    <data format="tabular" name="output" />
  </outputs>

  <tests>
    <test>
      <param name="input" value="CountFastaSequences.fa"/>
      <output name="out_file1" file="CountFastaSequences.txt"/>
    </test>
  </tests>

  <help>
This tool computes the number of protein sequences in a FASTA file.
  </help>

</tool>
